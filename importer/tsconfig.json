{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "../",
    "paths": {
      "@importer/*": ["importer/*"],
      "@libs/*": ["libs/*"],
      "@tests/*": ["tests/*"],
      "@types/*": ["@types/*"]
    }
  },
  "include": [
    "importer/**/*.ts",
    "importer/**/*.tsx",
    "libs/**/*.ts",
    "libs/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "@types/**/*.ts",
    "@types/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
